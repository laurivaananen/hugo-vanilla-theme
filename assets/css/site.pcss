.waves {
    background-image: url("/sine_waves_crop.svg");
    background-size: 3500px;
    height: 700px;
    background-position: -1300px;
}

.card {
    h1, h2, h3 {
        @apply border-b border-blue-200 mb-2 pb-2;
    }
}

#step-1::after {
    content: "1";
    z-index: -1;
    line-height: 100px;
    width: 116px;
    border-radius: 50%;
    @apply absolute text-center text-6xl inline-block font-semibold text-purple-200 border-8 border-purple-200 -ml-10 -mt-10;
}

#step-2::before {
    content: "2";
    z-index: -1;
    line-height: 100px;
    width: 116px;
    border-radius: 50%;
    @apply absolute text-center text-6xl inline-block font-semibold text-red-200 border-8 border-red-200 -ml-20 -mt-10;
}

#step-3::after {
    content: "3";
    z-index: -1;
    line-height: 100px;
    width: 116px;
    border-radius: 50%;
    @apply absolute text-center text-6xl inline-block font-semibold text-orange-200 border-8 border-orange-200 -ml-10 -mt-10;
}

#step-4::before {
    content: "4";
    z-index: -1;
    line-height: 100px;
    width: 116px;
    border-radius: 50%;
    @apply absolute text-center text-6xl inline-block font-semibold text-green-200 border-8 border-green-200 -ml-20 -mt-10;
}

.markdown {
    @apply leading-relaxed flex flex-col;

    > * + * {
        @apply mt-6;
    }

    > * > * > * + * {
        @apply mt-2;
    }

    h1, h2, h3 {
        @apply font-semibold leading-tight;
    }

    strong {
        @apply font-semibold;
    }

    pre {
        @apply p-2 rounded overflow-x-auto;
    }

    p > code {
        @apply bg-gray-200 p-1;
    }

    h1 {
        @apply text-3xl;
    }

    h2 {
        @apply text-2xl;
    }

    h3 {
        @apply text-xl;
    }

    p, code {
        @apply text-sm;
    }

    blockquote {
        @apply border-solid border-l-4 border-teal-800 pl-6 italic;
    }

    section p {
        @apply mt-2;
    }

    a {
        @apply text-teal-600;
    }

    a:hover {
        @apply text-teal-500;
    }

    ul {
        @apply list-disc pl-6;

        ul {
            @apply mt-2;
        }

        li + li {
            @apply mt-2;
        }
    }
}

