@screen sm {
    .markdown {
        h1 {
            @apply text-5xl;
        }

        h2 {
            @apply text-4xl;
        }

        h3 {
            @apply text-3xl;
        }

        p, code {
            @apply text-base;
        }

        pre {
            @apply p-4;
        }
    }
}
